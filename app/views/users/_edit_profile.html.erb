<div class = 'edit_profile'>
    <h1>Edit Profile</h1>
    <form action='/users/update' method='post'>
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <label>Username:</label>
        <input type="text" id="username" name="user[username]" placeholder="<%= user.username %>" required>
        <label>First name:</label>
        <input type="text" id="first_name" name="user[first_name]" placeholder="<%= user.first_name %>" required>
        <label>Last name:</label>
        <input type="text" id="last_name" name="user[last_name]" placeholder="<%= user.last_name %>" required>
        <label>Email:</label>
        <input type="email" id="email" name="user[email]" placeholder="<%= user.email %>" required>
        <label>Area:</label>
        <input type="text" id="email" name="user[area]" placeholder="<%= user.area %>" required>
        <label>Nearby Posts(in KM):</label>
        <input type="text" id="email" name="user[radius]" placeholder="<%= user.radius %>" required>
        <label>Password:</label>
        <input type="password" id="password" name="user[password]" required>
        <div class = 'edit_footer'>
            <button class = 'edit_button' type="submit">Edit</button>
            <a href='/profile'>Go back</a>
        </div>
    </form>
</div>